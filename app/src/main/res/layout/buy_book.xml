<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.buy.BuyBook">

  <RelativeLayout
      android:id="@+id/container"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_gravity="center"
      android:padding="@dimen/spacing_normal"
      android:elevation="4dp"
      android:background="@drawable/dialog_background"
      android:transitionName="@string/transition_buy_book">

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.HenriPotier.BuyTitle"
        tools:text="Henri Potier 1"/>

    <TextView
        android:id="@+id/book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/book_title"
        android:layout_toEndOf="@id/book_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        style="@style/Widget.HenriPotier.BuyPrice"
        android:text="10.33â‚¬"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/padding_normal"
        android:layout_marginBottom="@dimen/spacing_small"
        android:textColor="@color/text_primary_light"
        android:background="@color/accent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/confirm"/>

  </RelativeLayout>


</FrameLayout>