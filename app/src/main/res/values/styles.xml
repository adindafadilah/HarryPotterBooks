<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Widget.HenriPotier" parent="android:Widget"/>

  <style name="Widget.HenriPotier.Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:background">@color/primary</item>
    <item name="titleTextColor">@color/text_primary_light</item>
    <item name="android:textColor">@color/text_primary_light</item>
    <item name="android:elevation" tools:targetApi="lollipop">@dimen/toolbar_elevation</item>
  </style>

  <style name="HenriPotier.MainActivity"/>

  <style name="Widget.HenriPotier.CardTitle">
    <item name="android:maxLines">2</item>
    <item name="android:ellipsize">end</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/text_primary_dark</item>
  </style>

  <style name="Widget.HenriPotier.CardSubtitle" parent="TextAppearance.AppCompat.Small">
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:layout_marginBottom">@dimen/spacing_very_small</item>
    <item name="android:textColor">@color/text_secondary_dark</item>
  </style>

  <style name="Widget.HenriPotier.CardPrice">
    <item name="android:textColor">@color/accent</item>
  </style>


  <style name="HenriPotier.TranslucentBase"/>

  <style name="HenriPotier.Translucent" parent="HenriPotier.TranslucentBase">
    <item name="android:windowBackground">@color/translucent_background</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="HenriPotier.BookActivity">
  </style>

  <style name="HenriPotier.Translucent.BuyBook">
    <item name="android:windowAnimationStyle">@null</item>
    <item name="colorPrimary">@color/accent</item>
  </style>

  <style name="Widget.HenriPotier.BuyPrice">
    <item name="android:textColor">@color/accent</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="Widget.HenriPotier.BuyTitle">
    <item name="android:textColor">@color/text_primary_dark</item>
    <item name="android:textSize">18sp</item>
    <item name="android:maxLines">3</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="Widget.HenriPotier.QuantityAction">
  </style>

  <style name="Widget.HenriPotier.CartTitle" parent="TextAppearance.AppCompat.Caption">
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="TextAppearance.BookDescription" parent="TextAppearance.AppCompat.Subhead">
    <item name="android:textColor">@color/text_tertiary_dark</item>
  </style>

  <style name="TextAppearance.Rating" parent="TextAppearance.AppCompat.Display1">
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textSize">34sp</item>
  </style>

  <style name="TextAppearance.Caption" parent="TextAppearance.AppCompat.Caption">
  </style>

</resources>
